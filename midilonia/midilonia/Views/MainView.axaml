<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:s="clr-namespace:midilonia.Views"
             xmlns:midilib="clr-namespace:midilib;assembly=midilib"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:CompileBindings="False"
             x:Class="midilonia.Views.MainView" x:DataType="s:MainView">

  <Grid RowDefinitions="Auto, Auto">
    <TextBlock Text="{Binding Greeting}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    <Grid Grid.Row="1" ColumnDefinitions="Auto, 5, Auto" >
      <ListBox ItemsSource="{Binding Artists}">
        <ListBox.ItemTemplate>
          <DataTemplate>
            <TextBlock Text="{Binding Name}"/>
          </DataTemplate>
        </ListBox.ItemTemplate>
       </ListBox>
      <GridSplitter Grid.Column="1" Background="Blue"/>
      <ListBox Grid.Column="2"></ListBox>
    </Grid>
  </Grid>
</UserControl>

